{
  "compilerOptions": {
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "target": "ES6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*",
    "data/**/*",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    ".history"
  ]
}